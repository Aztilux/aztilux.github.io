---
import Card from "./Card.astro";
---

<Card class="absolute bottom-10 lg:left-10 lg:w-70 h-50 lg:h-auto text-center select-none">
    <div class="flex text-left justify-center lg:block lg:text-center gap-4">
        <img src="/assets/example.jpg" alt="Album Art" class="lg:block lg:mx-auto lg:w-48 lg:h-48 mb-4 rounded-xl w-15 h-15 object-cover"/>
        <div>
            <h1 id="player_title" class="text-2xl font-bold text-white">Song Name</h1>
            <h2 id="player_author" class="text-1xl mb-4 text-gray-200">Author</h2>
        </div>
    </div>
    <div class="flex text-white items-center justify-between">
        <p id="current-time" class="text-right">0:00</p>
        <input type="range" id="seek-bar" value="0" class="w-3/4 mx-4 cursor-pointer accent-[#e1a0ff]"/>
        <p id="duration" class="w-12 text-left">0:00</p>
    </div>
    <article title="media-controls" class="flex mt-4 w-full justify-around">
        <i id="player_previous" class="material-symbols-outlined text-white cursor-pointer" style="font-size:40px;">skip_previous</i>
        <i id="player_start" class="material-symbols-outlined text-white cursor-pointer linear-wipe bounce" style="font-size:40px;">play_arrow</i>
        <i id="player_next" class="material-symbols-outlined text-white cursor-pointer" style="font-size:40px;">skip_next</i>
    </article>
</Card>

<script>
    import { AudioPlayer } from '../scripts/player.js';
    const player = new AudioPlayer();
    player.init();
</script>